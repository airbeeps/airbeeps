# =============================================================================
# Airbeeps Docker Environment Configuration
# Copy this file to .env and customize for your deployment
# =============================================================================

# Security - CHANGE THIS IN PRODUCTION!
AIRBEEPS_SECRET_KEY=change-me-to-a-random-string

# Database
POSTGRES_PASSWORD=airbeeps

# Object Storage (MinIO/S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=airbeeps

# =============================================================================
# Optional Features (enabled by default in Docker)
# =============================================================================

# Redis Cache
# Set to "false" to disable Redis and use in-memory caching
# AIRBEEPS_REDIS_ENABLED=true

# Celery Task Queue
# Set to "false" to disable Celery and use in-process task execution
# AIRBEEPS_CELERY_ENABLED=true

# API Documentation
# Set to "true" to enable Swagger/OpenAPI docs in production
# AIRBEEPS_DOCS_ENABLED=false

# =============================================================================
# External Services (optional)
# =============================================================================

# OpenAI API Key (for GPT models)
# OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude models)
# ANTHROPIC_API_KEY=sk-ant-...

# Google AI API Key (for Gemini models)
# GOOGLE_API_KEY=...

# =============================================================================
# Advanced Configuration
# =============================================================================

# Celery worker concurrency (default: 4)
# AIRBEEPS_CELERY_WORKER_CONCURRENCY=4

# Redis max connections (default: 50)
# AIRBEEPS_REDIS_MAX_CONNECTIONS=50

# Tracing endpoint (for external observability)
# AIRBEEPS_TRACING_BACKEND=otlp
# AIRBEEPS_TRACING_ENDPOINT=http://jaeger:4317
