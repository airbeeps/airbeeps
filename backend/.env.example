AIRBEEPS_ENVIRONMENT=development

AIRBEEPS_LOG_LEVEL=INFO

AIRBEEPS_PROJECT_NAME="airbeeps"

# Default to local SQLite under data/
AIRBEEPS_DATABASE_URL="sqlite+aiosqlite:///./data/airbeeps.db"
# For Postgres, use e.g.:
# DATABASE_URL="postgresql+asyncpg://airbeeps:airbeeps@localhost:5432/airbeeps"

AIRBEEPS_SECRET_KEY="your_secret_key_here"

AIRBEEPS_EXTERNAL_URL=http://localhost:8500
AIRBEEPS_FRONTEND_URL=http://localhost:3000

# Email settings (disabled by default)
AIRBEEPS_MAIL_ENABLED=false
MAIL_SERVER=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_STARTTLS=
MAIL_SSL_TLS=
MAIL_FROM=

# S3 options (ignored when FILE_STORAGE_BACKEND=local)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=
S3_USE_SSL=

# Data root (base folder for local data)
AIRBEEPS_DATA_ROOT=data

# File Storage (default local filesystem)
AIRBEEPS_FILE_STORAGE_BACKEND=local
AIRBEEPS_LOCAL_STORAGE_ROOT=.files
AIRBEEPS_LOCAL_PUBLIC_BASE_URL=

# Vector Store (ChromaDB) - local by default
AIRBEEPS_CHROMA_PERSIST_DIR=chroma
AIRBEEPS_CHROMA_SERVER_HOST=localhost
AIRBEEPS_CHROMA_SERVER_PORT=8501
ANONYMIZED_TELEMETRY=false

# Agent / MCP (disabled by default)
AIRBEEPS_AGENT_ENABLE_MEMORY=false
AIRBEEPS_MCP_ENABLED=false
AIRBEEPS_MCP_SERVERS_CONFIG_PATH=/app/mcp_servers.json

# Telemetry Settings - ALL DISABLED
# Disable LlamaIndex telemetry
LLAMA_INDEX_INSTRUMENTATION=false
LLAMA_INDEX_NO_TELEMETRY=1
# Disable OpenTelemetry
OTEL_SDK_DISABLED=true
# Disable HuggingFace telemetry
HF_HUB_DISABLE_TELEMETRY=1
TRANSFORMERS_OFFLINE=1
# Disable any other telemetry
DO_NOT_TRACK=1
